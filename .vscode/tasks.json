{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Compile GHOST Buster",
			"type": "shell",
			"command": "${workspaceFolder}\"\\script\\build.ps1\"",
			"group": "build",
			"presentation": {
				"focus": true,
				"panel": "new"
			}
		},
		{
			"label": "Release GHOST Buster",
			"type": "shell",
			"command": "${workspaceFolder}\"\\script\\release.ps1\"",
			"group": "none",
			"presentation": {
				"focus": true,
				"panel": "new"
			}
		},
		{
			"label": "Build Website",
			"type": "shell",
			"command": "jekyll build -s \"./docs/\" -d \"./docs/_site/\"",
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		},
		{
			"label": "Serve Website",
			"type": "shell",
			"command": "jekyll serve -s \"./docs/\" -d \"./docs/_site/\"",
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "dedicated"
			}
		}
	]
}
